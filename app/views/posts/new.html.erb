<h3>スケジュール新規作成</h3>

<%= render "shared/error",obj:@post%>

<%= form_with model:@post do |f| %>
 <table>
  <tr>
   <th><%= f.label:title,"タイトル" %></th>
   <td><%= f.text_field :title %></td>
  </tr>

  <tr>
   <th><%= f.label :startday,"開始日" %></th>
   <td><%= f.date_field :startday%></td>
  </tr>

  <tr>
   <th><%= f.label :finishday,"終了日" %></th>
   <td><%= f.date_field :finishday%></td>
  </tr>

  <tr>
   <th><%= f.label :wholeday,"終日"%></th>
   <td><%= f.check_box :wholeday,{checked: true},"true","false"%></td>
  </tr>

  <tr>
   <th><%= f.label :memo,"スケジュールメモ"%></th>
   <td><%= f.text_area :memo%></td>
  </tr>
 </table>

 <div>
  <ul>
   <li><%= f.submit "予定追加"%></li>
   <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
  </ul>
 </div>
<% end %>