<div class="container">
 <div class="PageTitle">
  <h2 class="PageTitle_text">予定一覧</h2>
  <p><button class="btn btn-primary Button Button--primary"><%= link_to"新規追加",:new_post %></button></p>
 </div>

 <div class="table-responsive TableResponsive">
  <table class="table Table">

  <% if flash[:notice]%>
   <p class="notice"><%= flash[:notice] %></p>
  <% end %>
   <thead>
    <tr>
     <th>ID</th>
     <th>タイトル</th>
     <th>開始日</th>
     <th>終了日</th>
     <th>終日</th>
     <th>更新日時</th>
     <th>作成日</th>
     <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
    <% @posts.each do |post|%>
    <tr>
     <td><%= post.id%></td>
     <td><%= post.title%></td>
     <td><%= post.startday.strftime("%Y/%m/%d")%></td>
     <td><%= post.finishday.strftime("%Y/%m/%d")%></td>
     <td><% if post.wholeday == true %>
         ○
         <% else post.wholeday == false %><%end%></td>
     <td><%= post.updated_at.strftime("%Y/%m/%d %H:%M")%></td>
     <td><%= post.created_at.strftime("%Y/%m/%d")%></td>
     <td><%= link_to"詳細",post%></td>
     <td><%= link_to"編集",[:edit,post]%></td>
     <td><%= link_to"削除",post, method: :delete, data: { confirm: '本当に削除しますか？'}%></td>
    </tr>
    <%end%>
   </tbody>
  </table>
 </div>
</div>
